<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FraudWatch_WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FraudWatch_WebApp.styles.css" asp-append-version="true" />
    <style>

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        main {
            flex: 1;
        }

        .footer {
            margin-top: auto;
        }

        .navbar {
            background-color: #e3f2fd;
        }

        .navbar-brand {
            font-weight: bold;
            color: #0d47a1;
        }

        .navbar-nav .nav-link {
            color: #1e88e5;
            font-size: 0.9rem;
            font-weight: 500;
        }

            .navbar-nav .nav-link:hover {
                color: #0d47a1;
            }

        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        .footer {
            font-size: 0.8rem;
            background-color: #e3f2fd;
            color: #0d47a1;
        }

            .footer a {
                color: #1e88e5;
            }

                .footer a:hover {
                    color: #0d47a1;
                }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Odontoprev</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-lg-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Dentista" asp-action="Index">Dentista</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-4 py-3">
        <div class="container text-center">
            &copy; 2024 - FraudWatch_WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
