@model FraudWatch.Application.DTOs.DentistaDTO

<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f0f8ff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #007BFF;
        margin-bottom: 20px;
        font-family: Arial, sans-serif;
    }

    .form-group label {
        font-weight: bold;
        color: #333;
        font-family: Arial, sans-serif;
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #007BFF;
        padding: 10px;
        margin-bottom: 10px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 5px rgba(0, 91, 181, 0.5);
        }

    .btn-primary {
        background-color: #007BFF;
        border-color: #007BFF;
        font-weight: bold;
        transition: background-color 0.3s ease;
        font-family: Arial, sans-serif;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        font-size: 0.875em;
    }

    .back-link {
        display: block;
        margin-top: 20px;
        text-align: center;
        font-weight: bold;
        color: #007BFF;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
            color: #0056b3;
        }
</style>

<div class="container">
    <h2>Cadastro de Dentista</h2>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CRO" class="control-label"></label>
            <input asp-for="CRO" class="form-control" />
            <span asp-validation-for="CRO" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CPF" class="control-label"></label>
            <input asp-for="CPF" class="form-control" />
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataNascimento" class="control-label"></label>
            <input asp-for="DataNascimento" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary btn-block" />
        </div>
    </form>

    <a asp-action="Index" class="back-link">Back to List</a>
</div>
